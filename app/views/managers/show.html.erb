<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container my-4">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @manager.name %></h2>
      <p class="card-text">
        <strong>Email:</strong> <%= @manager.email %><br>
        <strong>Created on:</strong> <%= @manager.created_at.strftime("%B %d, %Y") %>
      </p>
    </div>
    <div class="card-footer d-flex justify-content-between flex-wrap gap-2">
      <%= link_to "Edit", edit_manager_path(@manager), class: "btn btn-warning" %>
      <%= link_to "Back to Managers", managers_path, class: "btn btn-secondary" %>
      <%= link_to "Home", root_path, class: "btn btn-info" %>
      <%= button_to "Delete", @manager, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
